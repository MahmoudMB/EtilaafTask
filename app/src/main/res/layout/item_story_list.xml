<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/StoryList_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp">



    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/StoryList_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What eight socfffffffffffffffit Ahhhhh18"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:maxLines="2"
            android:layout_margin="10dp"
            />


        <TextView
            android:id="@+id/StoryList_cratedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 hours ago"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#515151"
            android:maxLines="2"
            android:layout_below="@+id/StoryList_title"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp" />


    </LinearLayout>


    <ImageView
        android:id="@+id/StoryList_photo"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@color/colorPrimary"
       android:layout_margin="5dp"
android:layout_gravity="center"
        />




</LinearLayout>

